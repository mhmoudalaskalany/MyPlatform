@model Domain.DTO.Identity.User.LoginViewModel
<!-- Login Form-->
<section class="py-4 my-5">
    <div class="container">
        <div class="login">
            <div class="row  mb-3">
                <div class="col-lg-4 p-2 text-center">
                    <div class="d-flex flex-column justify-content-center">
                        <div class="logo mb-2">
                            <img src="~/images/biglogo.png" class="img-fluid" alt="">
                        </div>
                        <div class="vision">
                            <img src="~/images/vision.png" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>

                <div class="col-lg-8 text-center">
                    <h1 class="animate__animated animate__pulse animate__infinite text-primary mt-3">
                        بوابة الدخول
                        الموحد
                    </h1>

                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="row">
                            <div class="offset-1 col-lg-10">
                                <div class="form-group">
                                    <input type="text" required="required" asp-for="Username" />
                                    <label for="input" class="control-label">اسم المستخدم</label><i class="bar"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-1 col-lg-10">
                                <div class="form-group">
                                    <input type="password" required="required" asp-for="Password" />
                                    <label for="input" class="control-label">كلمة المرور</label><i class="bar"></i>
                                </div>
                            </div>
                        </div>
                        @if (Model.AllowRememberLogin)
                        {
                            <div class="d-flex justify-content-between align-items-center px-5">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" asp-for="RememberLogin" />
                                        <i class="helper"></i>تذكرنى
                                    </label>
                                </div>
                                <div class="mt-3">
                                    <a class="text-primary" value="ResetPassword" asp-action="ResetPassword">
                                        <span>هل نسيت كلمة المرور؟</span>
                                    </a>
                                </div>
                                
                                
                            </div>
                        }

                        <div class="d-flex justify-content-center">
                            <button class="btn-grad animate__animated animate__pulse animate__infinite" name="button"
                                    value="login">
                                <span>دخول</span>
                            </button>
                        </div>

                        

                    </form>
                    @Html.ValidationSummary(true)
                </div>
            </div>
            <div class="d-flex justify-content-center align-content-center">
                <h5 class="text-primary">
                    تم التطوير بواسطة دائرة تقنية المعلومات
                </h5>
            </div>
        </div>
        
    </div>
</section>
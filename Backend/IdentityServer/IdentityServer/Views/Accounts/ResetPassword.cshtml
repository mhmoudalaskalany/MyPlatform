@model Domain.DTO.Identity.User.ResetPasswordDto
<!-- Login Form-->
<section class="py-4 my-5">
    <div class="container">
        <div class="login">
            <div class="row  mb-3">
                <div class="col-lg-5 p-2 text-center">
                    <div class="d-flex flex-column justify-content-center">
                        <div class="logo mb-2">
                            <img src="~/images/biglogo.png" class="img-fluid" alt="">
                        </div>
                        <div class="vision">
                            <img src="~/images/vision.png" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>

                <div class="col-lg-7 text-center">
                    <h1 class="animate__animated animate__pulse animate__infinite text-primary mt-3 ">
                        بوابة الدخول
                        الموحد
                    </h1>

                    <h3 class="text-primary mt-2">
                        إعادة تعيين كلمة المرور
                    </h3>

                    <form asp-route="ResetPassword">
                        <div class="row">
                            <div class="offset-1 col-lg-10">
                                <div class="form-group">
                                    <input type="text" required="required" asp-for="Username" />
                                    <label for="input" class="control-label">اسم المستخدم</label><i class="bar"></i>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn-grad animate__animated animate__pulse animate__infinite" name="button"
                                    value="ResetPassword">
                                <span>إعادة تعيين</span>
                            </button>
                        </div>

                    </form>
                    @Html.ValidationSummary(true)
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <h5 class="text-primary">
                    من فضلك ادخل اسم المستخدم الخاص بك وسيتم ارسال رقم سرى متغير الى رقم هاتفك
                </h5>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <h5 class="text-primary">
                    ملحوظة: بعض المستخدمين يجب اضافة صفر قبل اسم المستخدم
                </h5>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <h5 class="text-primary">
                    تم التطوير بواسطة دائرة تقنية المعلومات
                </h5>
            </div>
        </div>

    </div>
</section>
<!-- Change Form-->
<section class="py-4 my-5">
    <div class="container">
        <div class="login">
            <div class="row  mb-3">
                <div class="col-lg-5 p-2 text-center">
                    <div class="d-flex flex-column justify-content-center">
                        <div class="logo mb-2">
                            <img src="~/images/biglogo.png" class="img-fluid" alt="">
                        </div>
                        <div class="vision">
                            <img src="~/images/vision.png" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>

                <div class="col-lg-7 text-center">
                    <h1 class="animate__animated animate__pulse animate__infinite text-primary mt-3 ">
                        بوابة الدخول
                        الموحد
                    </h1>

                    <form asp-action="ChangePassword">

                        <div class="row">
                            <div class="offset-1 col-lg-10">
                                <div class="form-group">
                                    <input type="password" required="required" asp-for="OldPassword" />
                                    <label for="input" class="control-label">كلمةالمرور الحالية</label><i class="bar"></i>
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-1 col-lg-10">
                                <div class="form-group">
                                    <input type="password" required="required" asp-for="NewPassword" />
                                    <label for="input" class="control-label">كلمة المرور الجديدة</label><i class="bar"></i>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-1 col-lg-10">
                                <div class="form-group">
                                    <input type="password" required="required" asp-for="ConfirmNewPassword" />
                                    <label for="input" class="control-label">تأكيد كلمة المرور الجديدة</label><i class="bar"></i>
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button class="btn-grad animate__animated animate__pulse animate__infinite" name="button"
                                    value="change">
                                <span>تغيير</span>
                            </button>
                        </div>

                    </form>
                    @Html.ValidationSummary(true)
                </div>
            </div>
            <div class="d-flex justify-content-center align-content-center">
                <h5 class="text-primary">
                    تم التطوير بواسطة دائرة تقنية المعلومات
                </h5>
            </div>
        </div>

    </div>
</section>